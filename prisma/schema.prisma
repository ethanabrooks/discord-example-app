// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Completion {
  id     Int    @id @default(autoincrement())
  turn   Turn   @relation(fields: [turnId], references: [id])
  turnId Int
  input  String
  output String
}

model Fact {
  id     Int    @id @default(autoincrement())
  turn   Turn   @relation(fields: [turnId], references: [id])
  turnId Int
  text   String
}

model Turn {
  id          Int          @id @default(autoincrement())
  game        Game         @relation(fields: [gameId], references: [id])
  gameId      Int
  facts       Fact[]
  figmaUrl    String?
  newFact     String?
  player      String
  status      String
  svg         String?
  turn        Int
  completions Completion[]
}

model Game {
  id             Int     @id @default(autoincrement())
  turns          Turn[]
  channel        String
  coherenceCheck Boolean
  proposition    String
}
