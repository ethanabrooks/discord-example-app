// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model FigmaData {
  username       String @unique @id
  fileId         String
  encryptedToken String // this is the encrypted token content
  tokenIV        String // this is the initialization vector (IV) for the token
}

model Image {
  id          Int     @id @default(autoincrement())
  description String?
  svg         String
  factId      Int     @unique
  fact        Fact    @relation(fields: [factId], references: [id])
  Turn        Turn[]
}

model Fact {
  id     Int    @id @default(autoincrement())
  image  Image?
  turn   Turn   @relation(fields: [turnId], references: [id])
  turnId Int
  text   String
  Game   Game[]
}

model Completion {
  id     Int    @id @default(autoincrement())
  turn   Turn   @relation(fields: [turnId], references: [id])
  turnId Int
  input  String
  output String
}

model Turn {
  id          Int          @id @default(autoincrement())
  completions Completion[]
  facts       Fact[]
  game        Game         @relation(fields: [gameId], references: [id])
  gameId      Int
  newFact     String?
  player      String
  status      String
  turn        Int
  Image       Image?       @relation(fields: [imageId], references: [id])
  imageId     Int?
}

model Game {
  id             Int     @id @default(autoincrement())
  turns          Turn[]
  channel        String
  coherenceCheck Boolean
  Fact           Fact?   @relation(fields: [factId], references: [id])
  factId         Int?
}
