// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model FigmaData {
  id             Int    @id @default(autoincrement())
  fileId         String
  username       String
  encryptedToken String // this is the encrypted token content
  tokenIV        String // this is the initialization vector (IV) for the token
}

model SvgData {
  id          Int     @id @default(autoincrement())
  description String?
  svg         String
  Turn        Turn[]
}

model Completion {
  id     Int    @id @default(autoincrement())
  turn   Turn   @relation(fields: [turnId], references: [id])
  turnId Int
  input  String
  output String
}

model Fact {
  id     Int    @id @default(autoincrement())
  turn   Turn   @relation(fields: [turnId], references: [id])
  turnId Int
  text   String
}

model Turn {
  id          Int          @id @default(autoincrement())
  completions Completion[]
  facts       Fact[]
  game        Game         @relation(fields: [gameId], references: [id])
  gameId      Int
  newFact     String?
  player      String
  status      String
  svgData     SvgData      @relation(fields: [svgDataId], references: [id])
  svgDataId   Int
  turn        Int
}

model Game {
  id             Int     @id @default(autoincrement())
  turns          Turn[]
  channel        String
  coherenceCheck Boolean
  proposition    String
}
