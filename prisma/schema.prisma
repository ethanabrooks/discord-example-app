// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model CustomCheck {
  id       Int    @id @default(autoincrement())
  username String
  check    String
  Game     Game[]
}

model FigmaData {
  username       String @id @unique
  fileId         String
  encryptedToken String // this is the encrypted token content
  tokenIV        String // this is the initialization vector (IV) for the token
}

model Game {
  id             Int          @id @default(autoincrement())
  channel        String
  coherenceCheck Boolean
  turns          Turn[]
  customCheck    CustomCheck? @relation(fields: [customCheckId], references: [id])
  customCheckId  Int?
}

model Turn {
  id          Int          @id @default(autoincrement())
  status      String
  playerInput String?
  player      String // Initialization Vector for player field
  fact        Fact?
  completions Completion[]
  gameId      Int
  game        Game         @relation(fields: [gameId], references: [id])
}

model Fact {
  id      Int    @id @default(autoincrement())
  text    String
  image   Image? @relation(fields: [imageId], references: [id])
  imageId Int?   @unique
  turn    Turn   @relation(fields: [id], references: [id])
}

model Completion {
  id     Int    @id @default(autoincrement())
  input  String
  output String
  turn   Turn   @relation(fields: [turnId], references: [id])
  turnId Int
}

model Image {
  id          Int     @id @default(autoincrement())
  description String?
  svg         String
  factId      Int     @unique
  Fact        Fact?
}
