// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Completion {
  id     Int    @id @default(autoincrement())
  turn   Turn   @relation(fields: [turnId], references: [id])
  turnId Int
  input  String
  output String
}

model Fact {
  id       Int     @id @default(autoincrement())
  turn     Turn    @relation(fields: [turnId], references: [id])
  turnId   Int
  text     String
  selected Boolean
}

model Turn {
  id          Int          @id @default(autoincrement())
  game        Game         @relation(fields: [gameId], references: [id])
  gameId      Int
  facts       Fact[]
  player      String
  proposed    String?
  won         Boolean
  turn        Int
  completions Completion[]
}

model Game {
  id          Int    @id @default(autoincrement())
  turns       Turn[]
  channel     String
  proposition String
}
